<% if flash[:errors] %>
    <% flash[:errors].each do |error_message| %>
      <p><%= error_message %></p>
    <% end %>
<% end %>

<%= form_for(@word) do |field| %>
  <%= field.label :name, "Give a new word" %>
  <%= field.text_field :name, :placeholder => "write the word" %>

  <%= field.label :meaning, "Give the meaning" %>
  <%= field.text_field :meaning, :placeholder => "write the meaning" %>
  
  <%= field.label :example, "Give an example" %>
  <%= field.text_field :example, :placeholder => "write an example" %>

  <%= field.submit "Save" %>
<% end %>